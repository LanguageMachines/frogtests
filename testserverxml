#!/bin/sh

\rm testserverxml-*.log

$frog_bin/frog -x --skip=p -S 7000  > testserverxml-1.log 2>&1  &
pid=`echo $!`

if [ `uname` = Darwin ]
then
    sleep 30
else
    count="0"
    stat="0"
    while [ $stat -ne 1 ]
    do
	#	echo `lsof -i :7000 |grep -c LISTEN`
	stat=`lsof -i :7000 |grep -c LISTEN`
	echo count=$count
	echo status=$stat
	count=$((count+1))
	if [ $count -ge 20 ]; then
	    echo "unable to start server in time..."
	    exit 1
	fi
	sleep 1
    done
fi

\rm  testserver3.out
\rm  testserver4.out

./frogclient3 &
pids[0]=$!
./frogclient4 &
pids[1]=$!

echo "created PID's: ${pids[*]}"
for sub_pid in ${pids[*]}
do
    wait $sub_pid
done

echo "done waiting"

grep -v READY testserver3.out | grep "\S" > testserverxml.1.xml
$folialint --nooutput testserverxml.1.xml > testserverxml.out 2>&1
grep -v READY testserver4.out | grep "\S" > testserverxml.2.xml
$folialint --nooutput testserverxml.2.xml >> testserverxml.out 2>&1

kill $pid
wait $pid

$frog_bin/frog -x -X --KANON --skip=p -S 7000  > testserverxml-2.log 2>&1  &
pid=`echo $!`

if [ `uname` = Darwin ]
then
    sleep 30
else
    count="0"
    stat="0"

    while [ $stat -ne 1 ]
    do
	#       echo `lsof -i :7000 |grep -c LISTEN`
	stat=`lsof -i :7000 |grep -c LISTEN`
	#    echo count=$count
	#    echo status=$stat
	count=$((count+1))
	if [ $count -ge 20 ]; then
	    echo "unable to start server in time..."
	    exit 1
	fi
	sleep 1
    done
fi

\rm  testserver3.out
\rm  testserver4.out

./frogclient3 &
pids2[0]=$!
./frogclient4 &
pids2[1]=$!

echo "created PID's: ${pids2[*]}"
for sub_pid in ${pids2[*]}
do
    wait $sub_pid
done

echo "done waiting"

grep -v READY testserver3.out | grep "\S" > testserverxml.3.xml
$folialint --nooutput testserverxml.3.xml >> testserverxml.out 2>&1
grep -v READY testserver4.out | grep "\S" > testserverxml.4.xml
$folialint --nooutput testserverxml.4.xml >> testserverxml.out 2>&1


kill $pid
wait $pid

$frog_bin/frog -X --KANON --skip=p -S 7000  > testserverxml-3.log 2>&1  &
pid=`echo $!`

if [ `uname` = Darwin ]
then
    sleep 30
else
    count="0"
    stat="0"

    while [ $stat -ne 1 ]
    do
	#       echo `lsof -i :7000 |grep -c LISTEN`
	stat=`lsof -i :7000 |grep -c LISTEN`
	#    echo count=$count
	#    echo status=$stat
	count=$((count+1))
	if [ $count -ge 20 ]; then
	    echo "unable to start server in time..."
	    exit 1
	fi
	sleep 1
    done
fi

\rm  testserver6.out
\rm  testserver7.out

./frogclient6 &
pids3[0]=$!
./frogclient7 &
pids3[1]=$!

echo "created PID's: ${pids3[*]}"
for sub_pid in ${pids3[*]}
do
    wait $sub_pid
done

echo "done waiting"

grep -v READY testserver6.out | grep "\S" > testserverxml.6.xml
$folialint --nooutput testserverxml.6.xml >> testserverxml.out 2>&1
grep -v READY testserver7.out | grep "\S" > testserverxml.7.xml
$folialint --nooutput testserverxml.7.xml >> testserverxml.out 2>&1

kill $pid
wait $pid
